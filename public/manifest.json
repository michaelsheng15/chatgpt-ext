{
  "manifest_version": 3,
  "name": "ChatGPT Enhancer",
  "description": "Enhance your ChatGPT experience with advanced prompt engineering and formatting.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/marked.js", "asset-manifest.json",
        "static/js/*.js", "static/css/*.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": [
        "content.js",
        "api.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo512.png"
  }
}